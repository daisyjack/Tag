<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFE9DC" >

        <ImageButton
            android:id="@+id/world_button"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/menu_world" />

        <ImageButton
            android:id="@+id/follow_button"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:src="@drawable/menu_concern"
            android:background="#00000000"/>
		<ImageButton
            android:id="@+id/talk_button"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:src="@drawable/menu_conversation"
            android:background="#00000000"/>
		<ImageButton
            android:id="@+id/me_button"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:src="@drawable/menu_me"
            android:background="#00000000"/>
    </LinearLayout>
